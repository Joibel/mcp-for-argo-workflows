# MCP for Argo Workflows - Docker Compose Environment Variables

# Default namespace for Argo Workflows operations
ARGO_NAMESPACE=argo

# Argo Server connection (leave empty for direct Kubernetes API)
# ARGO_SERVER=argo-server.argo:2746

# Bearer token for Argo Server authentication
# ARGO_TOKEN=Bearer eyJhbGciOiJSUzI1NiIs...

# TLS settings for Argo Server
ARGO_SECURE=true
ARGO_INSECURE_SKIP_VERIFY=false
